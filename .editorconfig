# ============================================
# EditorConfig - コードスタイルの統一
# ============================================
# https://editorconfig.org

# すべてのファイルに適用される設定のトップレベルフラグ
root = true

# すべてのファイルに適用される基本設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefileはタブを使用
[Makefile]
indent_style = tab

# Python
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Go
[*.go]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# C/C++
[*.{c,cpp,h,hpp}]
indent_size = 4

# Java
[*.java]
indent_size = 4

# Ruby
[*.rb]
indent_size = 2

# PHP
[*.php]
indent_size = 4

# HTML / CSS / SCSS
[*.{html,css,scss,sass,less}]
indent_size = 2

# XML
[*.xml]
indent_size = 2

# Configuration files
[*.{conf,config,ini}]
indent_size = 2

# Package files
[{package.json,composer.json}]
indent_size = 2
